{
	"name": "slime2",
	"version": "0.0.0",
	"description": "Local Stream Widget Manager",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "npm run widget:build && npm run dev",
		"dev": "concurrently --kill-others -n TAURI,WIDGET -c green.bold,yellow.bold \"tauri dev\" \"npm:widget:dev\"",
		"build": "tauri build",
		"tauri": "tauri",
		"icon": "npm run tauri icon",
		"before:dev": "vite",
		"before:build": "npm run widget:build && tsc && vite build && npm run icon",
		"widget:dev": "npm --prefix ./src-widget/ run dev",
		"widget:build": "npm --prefix ./src-widget/ run build"
	},
	"dependencies": {
		"@headlessui/react": "^2.2.0",
		"@tanstack/react-query": "^5.60.2",
		"@tanstack/react-router": "^1.81.6",
		"@tauri-apps/api": "^2.1.1",
		"@tauri-apps/plugin-clipboard-manager": "^2.0.0",
		"@tauri-apps/plugin-dialog": "^2.0.1",
		"@tauri-apps/plugin-shell": "^2.0.1",
		"clsx": "^2.1.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.14.0",
		"@tanstack/router-devtools": "^1.81.6",
		"@tanstack/router-vite-plugin": "^1.81.6",
		"@tauri-apps/cli": "^2.1.0",
		"@types/react": "^19.0.7",
		"@types/react-dom": "^19.0.3",
		"@vitejs/plugin-react-swc": "^3.6.0",
		"autoprefixer": "^10.4.19",
		"concurrently": "^9.1.0",
		"eslint": "^9.14.0",
		"eslint-plugin-react": "^7.37.2",
		"globals": "^15.12.0",
		"postcss": "^8.4.49",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^4.0.0",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"tailwindcss": "^3.4.14",
		"typescript": "^5.0.2",
		"typescript-eslint": "^8.14.0",
		"vite": "^6.0.7",
		"vite-tsconfig-paths": "^5.1.2"
	}
}
