{
	"build": {
		"beforeDevCommand": "npm run before:dev",
		"beforeBuildCommand": "npm run before:build",
		"frontendDist": "../dist",
		"devUrl": "http://localhost:57142"
	},
	"bundle": {
		"active": true,
		"resources": {
			"../resources/widget_server": "widget_server/",
			"../resources/widgets": "widgets/",
			"../resources/assets": "assets/"
		},
		"category": "utility",
		"shortDescription": "Local Stream Widget Manager",
		"longDescription": "Manages stream widgets that all run locally on your computer",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"targets": "all"
	},
	"productName": "slime2",
	"mainBinaryName": "slime2",
	"version": "../package.json",
	"identifier": "stream.slime2.desktop",
	"plugins": {},
	"app": {
		"windows": [
			{
				"title": "slime2",
				"width": 1200,
				"height": 700,
				"center": true,
				"acceptFirstMouse": true
			}
		],
		"security": {
			"capabilities": [
				"default",
				"dialog",
				"clipboard",
				"file",
				"event",
				"version",
				"watcher"
			],
			"csp": {
				"default-src": ["'self'", "http://localhost:*"],
				"connect-src": [
					"ipc:",
					"http://ipc.localhost",
					"https://id.twitch.tv",
					"https://api.twitch.tv",
					"wss://eventsub.wss.twitch.tv",
					"https://api.pronouns.alejo.io",
					"https://pronoundb.org",
					"https://api.betterttv.net",
					"https://api.frankerfacez.com"
				],
				"style-src": ["'self'", "https://fonts.googleapis.com"],
				"font-src": ["https://fonts.gstatic.com"],
				"img-src": ["'self'", "http://localhost:*", "https:", "data:"]
			}
		}
	}
}
