{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "slime2",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "create": true,
        "startDragging": true,
        "hide": true,
        "show": true,
        "minimize": true,
        "unminimize": true,
        "close": true
      }
    },
    "windows": [
      {
        "title": "slime2",
        "width": 1200,
        "height": 700,
        "acceptFirstMouse": true,
        "transparent": true,
        "decorations": false,
        "resizable": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "stream.slime2.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
