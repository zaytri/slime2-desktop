{
	"textCategory": {
		"label": "Text",
		"settings": {
			"font": {
				"label": "Font",
				"type": "font-input"
			},
			"size": {
				"label": "Font Size (px)",
				"type": "number-input",
				"min": 0,
				"step": 1
			},
			"weight": {
				"label": "Font Weight",
				"type": "select-input",
				"defaultValue": "normal",
				"options": [
					{ "label": "Normal", "value": "normal" },
					{ "label": "Bold", "value": "bold" },
					{ "label": "100", "value": 100 },
					{ "label": "200", "value": 200 },
					{ "label": "300", "value": 300 },
					{ "label": "400", "value": 400 },
					{ "label": "500", "value": 500 },
					{ "label": "600", "value": 600 },
					{ "label": "700", "value": 700 },
					{ "label": "800", "value": 800 },
					{ "label": "900", "value": 900 }
				]
			},
			"showColon": {
				"label": "Show colon (:) after username",
				"type": "toggle-input",
				"defaultValue": true
			},
			"usernameColor": {
				"label": "Username Color",
				"type": "select-input",
				"defaultValue": "twitch",
				"options": [
					{ "label": "Twitch", "value": "twitch" },
					{ "label": "Custom", "value": "custom" }
				]
			},
			"customUsernameColor": {
				"label": "Custom User Color",
				"type": "color-input",
				"defaultValue": "white",
				"description": "This will only be applied when you select \"Custom\" above."
			},
			"messageColor": {
				"label": "Message Text Color",
				"type": "color-input",
				"defaultValue": "white"
			}
		}
	}
}
